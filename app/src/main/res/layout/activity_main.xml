<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.lzx.wiget.TitleBar
            android:id="@+id/tb_main"
            app:left_iocn_visible="true"
            app:left_icon="@mipmap/user2"
            app:title_txt="@string/app_name"
            app:right_icon_visible="true"
            app:right_icon="@mipmap/msg2"
            app:icon_wh="@integer/drawable_wh"
            app:title_txt_size="22.0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_wh"></com.lzx.wiget.TitleBar>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_main"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"></androidx.viewpager.widget.ViewPager>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_bottombar"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:itemIconTint="@color/bottombar_color_selector"
            app:itemTextColor="@color/bottombar_color_selector"
            app:itemHorizontalTranslationEnabled="false"
            android:background="@color/colorPrimary"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_bottombar">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="left"
        android:layout_width="260dp"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/menu_drawlayout"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <Button
                style="@style/normalTxtStyle"
                android:background="@drawable/btn_success_background"
                android:layout_gravity="center"
                android:text="实名认证"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Button>
            <Button
                android:layout_marginTop="2dp"
                android:background="@drawable/btn_error_background"
                style="@style/normalTxtStyle"
                android:layout_gravity="center"
                android:text="退出登录"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Button>
            <TextView
                style="@style/normalTxtStyle"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="联系电话"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                style="@style/normalTxtStyle"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/phone"
                android:text="010-88888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"></TextView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>